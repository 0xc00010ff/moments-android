<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.tikkunolam.momentsintime.TopicActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/create_topic_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionBlue" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/create_topic_headline_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:hint="@string/topic_headline"
        app:met_floatingLabel="normal"
        app:met_floatingLabelAnimating="true"
        app:met_maxCharacters="50"
        app:met_primaryColor="@color/colorPrimary" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/create_topic_question_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:hint="@string/topic_question"
        app:met_floatingLabel="normal"
        app:met_floatingLabelAnimating="true"
        app:met_maxCharacters="120"
        app:met_primaryColor="@color/colorPrimary" />

</LinearLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <android.support.v7.widget.Toolbar
        android:id="@+id/terms_and_conditions_fragment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionBlue"
        android:layout_alignParentTop="true"></android.support.v7.widget.Toolbar>

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/terms_and_conditions_fragment_pdfView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/terms_and_conditions_fragment_toolbar" />

</RelativeLayout>
